<!-- stackable -->
<div id="stack1" class="modal fade" tabindex="-1" data-focus-on="input:first">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h3 class="modal-title bold" > @Model.Nome @Model.Sobrenome</h3>
    </div>

    <div class="modal-body col-md-12 ">
            <div class="row">
                    <div class="row">
                        <div class="col-md-7 blog-tag-data">
                            <img src="@Model.PathFotoPerfil" class="img-responsive"alt="">
                            <div class="row">
                                <div class="col-md-12">
                                    <ul class="list-inline blog-tags">
                                        <li>
                                            <i class="fa fa-tags"></i>
                                            @Model.Tags

                                        </li>
                                    </ul>
                                </div>
                                <hr>
                            </div>
                            <div class="col-md-12">
                                <p>
                                    @Model.FraseApresentacao
                                </p>
                            </div>
                            <hr>
                            <div class="col-md-12">
                                <p>
                                    @Model.Descricao
                                </p>
                            </div>
                            <hr>


                        </div>
                    </div>
            </div>

    </div>
    <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn btn-default">Close</button>
        <button type="button" class="btn btn-primary">Ok</button>
        <button class="btn blue" data-toggle="modal" href="#stack2">Launch modal</button>
    </div>
</div>
