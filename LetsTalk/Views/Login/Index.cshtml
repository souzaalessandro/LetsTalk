@{
    ViewBag.Title = "Index";
    ViewBag.MostrarBarrinha = false;
}
<div class="col-md-offset-3 col-md-6" style="margin-top: 10%">
    <!-- BEGIN SAMPLE FORM PORTLET-->
    <div class="portlet light ">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-share font-green-sharp"></i>
                <span class="caption-subject font-green-sharp bold uppercase">Login</span>
            </div>
        </div>

        <div class="portlet-body form">
            <form action="@Url.Action("algumacoisa", "algumacoisa")" method="post" role="form">
                @Html.AntiForgeryToken()
                <div class="form-body">
                    <div class="form-group">
                        <label>Email</label>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-envelope"></i>
                            </span>
                            <input type="text" class="form-control" placeholder="Endereço de Email">
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Senha</label>
                        <div class="input-group">
                            <input type="password" class="form-control" placeholder="Senha">
                            <span class="input-group-addon">
                                <i class="icon-key"></i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <button type="button" class="btn purple-customizado-fraco default-roxocustomizadofraco btn-circle">Registrar</button>
                    <button type="button" class="btn purple-customizado-fraco default-roxocustomizadofraco btn-circle">Esqueci minha senha</button>
                    <button type="submit" class="btn purple-customizado default-roxocustomizado btn-circle pull-right">
                        Entrar &thinsp;
                        <i class="icon-login"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


@section JqueryFinal{}
