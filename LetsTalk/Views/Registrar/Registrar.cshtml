@{
    ViewBag.Title = "Index";
    ViewBag.MostrarBarrinha = true;
}


@section PageLevelPluginStyles{
    <link rel="stylesheet" type="text/css" href="~/assets/global/plugins/select2/select2.css" />

    <link rel="stylesheet" type="text/css" href="~/assets/global/plugins/bootstrap-select/bootstrap-select.min.css" />
    <link rel="stylesheet" type="text/css" href="~/assets/global/plugins/select2/select2.css" />
    <link rel="stylesheet" type="text/css" href="~/assets/global/plugins/jquery-multi-select/css/multi-select.css" />
}


<div class="col-md-offset-3 col-md-6">
    <div class="portlet box purple">
        <div class="portlet-body form">
            <!-- BEGIN FORM-->
            <form action="@Url.Action("RegistrarNovo", "Registrar")" method="post">
                <div class="form-body">
                    <div class="form-group">
                        <label class="control-label">Nome</label>
                        <input type="text" class="form-control" placeholder="Digite seu nome">
                    </div>

                    <div class="form-group">
                        <label class="control-label">Sobrenome</label>
                        <input type="text" class="form-control" placeholder="Digite seu sobrenome">
                    </div>

                    <div class="row">
                    <div class="form-group col-md-8">
                        <label class="control-label">Data de Nascimento</label>
                        <input type="datetime-local" class="form-control" placeholder="Digite seu sobrenome">
                    </div>

                    <div class="form-group col-md-4">
                        <div class="" style="float: none; padding: unset;">
                            <label class="control-label">Gênero</label>
                            <select class="bs-select form-control" style="display: block;">
                                <option>Feminino</option>
                                <option>Indefinido</option>
                                <option>Masculino</option>
                                <option>Outro...</option>
                            </select>
                        </div>
                    </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Email Address</label>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-envelope"></i>
                            </span>
                            <input type="email" class="form-control" placeholder="Email Address">
                        </div>
                    </div>

                    <div class="form-actions right">
                        <button type="submit" class="btn purple-customizado default-roxocustomizado btn-circle pull-right">
                            Entrar &thinsp;
                            <i class="icon-login"></i>
                        </button>
                    </div>
                </div>
            </form>
            <!-- END FORM-->
        </div>
    </div>
</div>


@section  PageLevelPlugins
{
    <script type="text/javascript" src="~/assets/global/plugins/select2/select2.min.js"></script>

    <script type="text/javascript" src="~/assets/global/plugins/bootstrap-select/bootstrap-select.min.js"></script>
    <script type="text/javascript" src="~/assets/global/plugins/select2/select2.min.js"></script>
    <script type="text/javascript" src="~/assets/global/plugins/jquery-multi-select/js/jquery.multi-select.js"></script>
}
@section PageLevelScripts {
    <script src="~/assets/global/scripts/metronic.js" type="text/javascript"></script>
    <script src="~/assets/admin/layout3/scripts/layout.js" type="text/javascript"></script>
    <script src="~/assets/admin/layout3/scripts/demo.js" type="text/javascript"></script>
    <script src="~/assets/admin/pages/scripts/form-samples.js"></script>

    <script src="~/assets/global/scripts/metronic.js" type="text/javascript"></script>
    <script src="~/assets/admin/layout3/scripts/layout.js" type="text/javascript"></script>
    <script src="~/assets/admin/layout3/scripts/demo.js" type="text/javascript"></script>
    <script src="~/assets/admin/pages/scripts/components-dropdowns.js"></script>
}
